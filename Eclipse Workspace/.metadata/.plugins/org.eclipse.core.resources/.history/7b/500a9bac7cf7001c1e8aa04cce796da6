package usingIf;

import java.util.Scanner;

public class usingIf{
     public static void main(String args[]) {
    	 String name;
            float percent;
            Scanner in=new Scanner(System.in);
            System.out.println("Enter Employee name ");
            name=in.nextLine();
            System.out.println("Enter Rank percentage ");
            percent=in.nextFloat();
            if(percent>=70)
            {
              System.out.println("You are in High Rank");
            }
                else
                {  System.out.println("You are in Medium Rank");
                }
            int salaryfeb,salarymar,salaryapr,totalsalary,avg,ch;
            System.out.println("1. alary of the employee for 3 months");
            System.out.println("2.Average salary");
            System.out.println("Enter your salary : ");
            ch=in.nextInt();
            System.out.println("Enter the salary for 3 months: ");
            test1=in.nextInt();
            test2=in.nextInt();
            test3=in.nextInt();
            switch (ch)
            {
                case 1:
                    total=test1+test2+test3;
                    System.out.println("Total internal marks of the student " +total);
                    break;
                case 2:
                    avg=(test1+test2+test3)/3;
                    System.out.println("Average of the internals "+avg);
                    break;
                default:
                    System.out.println("Invalid Selection");
                    break;
            }
     }
                }